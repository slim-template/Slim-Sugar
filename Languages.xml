<?xml version="1.0" encoding="UTF-8"?>
<settings>

    <language id="text.slim">
        
        <!-- Define what syntax this language should use;
              use the name of the syntax you defined in Syntaxes -->
        <root-zone>language-root.slim</root-zone>

        <!-- Human readable name for the language -->
        <name>Slim</name>

        <!-- Ways to detect the language (see next section) -->
        <detectors>
            <extension>slim</extension>
        </detectors>
        
        <default-extension>slim</default-extension>
        
    </language>
    
</settings> 

