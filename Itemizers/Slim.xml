<?xml version="1.0"?>
<itemizer>
	<recipe name="slim.tag">
		<selector>slim item:has-child(tag-def:has-child(tag.inline-block:has-child(name:capture(name))))</selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
		
	<recipe name="slim.tag.shortcut">
		<selector>slim item:has-child(tag-def:has-child(tag.shortcut:has-child(name:capture(name))))</selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
	<recipe name="slim.filter">
		<selector>slim filter-item:has-child(filter.definition:capture(name))</selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>

	<recipe name="slim.comment">
		<selector>slim comment-text-item:capture(name)</selector>
	</recipe>
		
	<recipe name="slim.doctype.processing-instruction">
		<selector>slim document-decloration:capture(name)</selector>
		<subrecipes>
			<include-root-recipes />
		</subrecipes>
	</recipe>
</itemizer> 